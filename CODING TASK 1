package task1;

//Print the area and perimeter of a rectangle, given its radius

class RectangleComputation {  // Save as "RectangleComputation.java"

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Declare 4 double variables to hold length, width, area and perimeter
		// A "double" holds floating-point number with an optional fractional part
		double length, width, area, perimeter;
		
		// Assign a value to length (We shall read in the value from the keyboard later.)
		length = 78;
		// Assign a value to width
		width = 36;
		// Compute area and perimeter
		area = length * width;
		perimeter = (2.0 * length) + (2.0 * width);
		
		// Print results
		System.out.print("The length is "); // Print description
		System.out.println(length); // Print the value stored in the variable
		System.out.print("The width is ");
		System.out.println(width);
		System.out.print("The area is ");
		System.out.println(area);
		System.out.print("The perimeter is ");
		System.out.println(perimeter);
	}

}

package task1;

//Print the surface area, base area, and volume of a cylinder, given its radius and height

class CylinderComputation {  // Save as "CylinderComputation.java"

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Declare 5 double variables to hold radius, height, surfaceArea, baseArea, volume
		// A "double" holds floating-point number with an optional fractional part
		double radius, height, surfaceArea, baseArea, volume;
		// Declare a double to hold PI
		// Declare as "final" to specify that its value cannot be changed (i.e. constant)
		final double PI = 3.14159265;
		
		// Assign a value to radius (We shall read in the value from the keyboard later)
		radius = 1.2;
		// Assign a value to height
		height = 8.6;
		// Compute surfaceArea, baseArea and volume
		surfaceArea = (2.0 * PI * radius * height) + (2.0 * PI * (radius * radius));
		baseArea = PI * (radius * radius);
		volume = PI * (radius * radius) * height;
		
		// Print results
		System.out.printf("The radius is %.2f ", radius);
		System.out.printf("\nThe height is %.2f ", height);
		System.out.printf("\nThe surface area is %.2f ", surfaceArea);
		System.out.printf("\nThe base area is %.2f ", baseArea);
		System.out.printf("\nThe volume is %.2f ", volume);
	}

}
